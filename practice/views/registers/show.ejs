<!-- views/posts/show.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>
    <div class="왼쪽공간">
      this is left area
    </div>
    <div>
      <% include ./partials/header %>

      <div>
        <a href="/registers">Back</a>
        <!-- 로그인이 된 상태이고, 게시물의 작성자 id(post.author.id)와 현재 로그인된 사용자의 id(currentUser.id)가 일치하는 경우에만 edit, delete을 보여줌 -->
        <% if(isAuthenticated && register.author && currentUser.id == register.author.id){ %>
          <a href="/registers/<%= register._id %>/edit">Edit</a>
          <form action="/registers/<%= register._id %>?_method=delete" method="post">
            <a href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
          </form>
        <% } %>
      </div>

      <div>
        <div>
          <div>
            <div>
              <div>title : <%= register.title %></div>
              <div>sub_title : <%= register.sub_title %></div>
              <div>required_people : <%= register.required_people %></div>
              <div>budget : <%= register.budget %></div>
              <div>startline : <%= register.startline %></div>    
              <div>작성자 : <%= register.author ? register.author.username : "" %></div>
              <div>작성일 : <%= register.createdDate %> <%= register.createdTime %></div>
              <div>이미지 : <%= register.img %></div>
              <div>마감일 : <%= register.deadline %></div>
              <div>내용 : <%= register.body %></div>
              
              <!-- 업데이트 시 적용 -->
              <% if(register.updatedAt) { %>
                <div>Updated : <%= register.updatedDate %> <%= register.updatedTime %></div>
              <% } %>

            </div> <!-- post-info end -->
          </div> <!-- col end-->
        </div> <!-- row end -->
      </div> <!-- post-container end -->
    </div> <!-- container end -->
  </body>
</html>
